<section class='weapons-section'>
	<div class='flexrow items-header'>
		<h3>{{localize 'ASTRO.actor.weapons.weapons'}}</h3>
		<h3 class='item-name'>{{localize 'ASTRO.actor.weapons.name'}}</h3>
		<h3 class='item-formula'>{{localize 'ASTRO.actor.weapons.damage'}}</h3>
		<h3>{{localize 'ASTRO.weapon.price'}}</h3>
		<h3 class='item-controls'>
			<a class='item-control item-create' title='{{localize "ASTRO.actor.itemOption.newWeapon"}}' data-type='weapon'>
				<i class='fas fa-plus'></i>
			</a>
		</h3>
	</div>
	<ol class='items-list'>
		{{#each weapons as |item id|}}
			<li class='weapon-item item flexcol' data-item-id='{{item._id}}'>
				<div class='flexrow item-row'>
					<img src='{{item.img}}' data-edit='img' title='{{item.name}}' height='30' width='30' />
					<a title='{{localize "ASTRO.actor.itemOption.roll"}}' class='rollable' data-roll-type='weapon' data-roll='{{system.damage.roll}}' data-bonus='{{system.statusBonus.name}}' data-label='{{item.name}}'>
						<h4 type='text' data-type='String'>{{item.name}}</h4>
					</a>
					<h4 type='text' data-type='String'>{{system.damage.roll}}+[<span style='text-transform: uppercase;'>{{system.statusBonus.name}}</span>]</h4>
					<h4 type='number' data-type='String'>{{system.price.value}}</h4>
					<div class='item-controls'>
						{{#if system.eqquiped.boolean}}
							<a class='item-control item-toggle-unequip' title='{{localize "ASTRO.actor.itemOption.equip"}}'>
								<i class='fa-solid fa-toggle-on'></i>
							</a>
						{{else}}
							<a class='item-control item-toggle-equip' title='{{localize "ASTRO.actor.itemOption.unequip"}}'>
								<i class='fa-solid fa-toggle-off'></i>
							</a>
						{{/if}}

						<a class='item-control item-display' title='{{localize "ASTRO.actor.itemOption.info"}}'>
							<i class='fa-solid fa-folder'></i>
						</a>
					</div>
				</div>
				<div class='item-info invisible'>
					{{{system.description}}}
				</div>
			</li>
		{{/each}}
	</ol>
</section>
<section class='hacks-section'>
	<div class='flexrow items-header'>
		<h3>{{localize 'ASTRO.actor.hacks.hacks'}}</h3>
		<h3 class='item-name'>{{localize 'ASTRO.actor.hacks.name'}}</h3>
		<h3 class='item-formula'>{{localize 'ASTRO.actor.weapons.damage'}}</h3>
		<h3 class='item-controls'>
			<a class='item-control item-create' title='{{localize "ASTRO.actor.itemOption.newHack"}}' data-type='hack'>
				<i class='fas fa-plus'></i>
			</a>
		</h3>
	</div>
</section>