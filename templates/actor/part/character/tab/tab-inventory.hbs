<section>
	<div class='flexrow items-header'>
		<h3>Items</h3>
		<h3 class='item-name'>Name</h3>
		<h3 class='item-formula'>Type</h3>
		<h3>Price</h3>
		<h3 class='item-controls'>
			<a class='item-control item-create' title='{{localize "ASTRO.actor.itemOption.newWeapon"}}' data-type='item'>
				<i class='fas fa-plus'></i>
			</a>
		</h3>
	</div>
	<ol>
		{{#each items as |item id|}}
			<li class='item-item item flexcol' data-item-id='{{item._id}}'>
				<div class='flexrow item-row'>
					<img src='{{item.img}}' data-edit='img' title='{{item.name}}' height='30' width='30' />
					<a
						title='{{localize "ASTRO.actor.itemOption.roll"}}'
						class='rollable'
						data-roll-type='item'
						data-label='{{item.name}}'
						data-type='{{system.type}}'
						data-img='{{item.img}}'
						data-roll='{{system.damage}}'
						data-bonus='{{system.statusBonus}}'
						data-description='{{{system.description}}}'
					>
						<h4 type='text' data-type='String'>{{item.name}}</h4>
					</a>
					<h4 type='text' data-type='String' style='text-transform: capitalize;'>{{system.type}}</h4>
					<h4 type='number' data-type='String'>{{system.price}}</h4>
					<div class='item-controls'>
						{{#if system.eqquiped}}
							<a class='item-control item-toggle-unequip' title='{{localize "ASTRO.actor.itemOption.unequip"}}'>
								<i class='fa-solid fa-toggle-on'></i>
							</a>
						{{else}}
							<a class='item-control item-toggle-equip' title='{{localize "ASTRO.actor.itemOption.equip"}}'>
								<i class='fa-solid fa-toggle-off'></i>
							</a>
						{{/if}}
						{{#if system.openFolder}}
							<a class='item-control item-folder-close' title='{{localize "ASTRO.actor.itemOption.info"}}'>
								<i class='fa-solid fa-folder-open'></i>
							</a>
						{{else}}
							<a class='item-control item-folder-open' title='{{localize "ASTRO.actor.itemOption.info"}}'>
								<i class='fa-solid fa-folder'></i>
							</a>
						{{/if}}
					</div>
				</div>
				<div class='item-info'>
					{{#if system.openFolder}}
						{{{system.description}}}
					{{else}}
						<span></span>
					{{/if}}
				</div>
			</li>
		{{/each}}
	</ol>
</section>