<section class='actions'>
	<section class='weapons-section'>
		{{#each weapons as |item id|}}
			{{#if system.eqquiped.boolean}}
				<div class='flexrow items-header'>
					<h3>{{localize 'ASTRO.actor.weapons.weapons'}}</h3>
					<h3 class='item-name'>{{localize 'ASTRO.actor.weapons.name'}}</h3>
					<h3 class='item-formula'>{{localize 'ASTRO.actor.weapons.damage'}}</h3>
					<h3>{{localize 'ASTRO.weapon.price'}}</h3>
					<span></span>
				</div>
				<ol class='items-list'>

					<li class='weapon-item item flexcol' data-item-id='{{item._id}}'>
						<div class='flexrow item-row'>
							<img src='{{item.img}}' data-edit='img' title='{{item.name}}' height='30' width='30' />
							<a
								title='{{localize "ASTRO.actor.itemOption.roll"}}'
								class='rollable'
								data-roll-type='weapon'
								data-label='{{item.name}}'
								data-img='{{item.img}}'
								data-roll='{{system.damage.roll}}'
								data-bonus='{{system.statusBonus.name}}'
								data-description='{{{system.description}}}'
							>
								<h4 type='text' data-type='String'>{{item.name}}</h4>
							</a>
							<h4 type='text' data-type='String'>{{system.damage.roll}}+[<span style='text-transform: uppercase;'>{{system.statusBonus.name}}</span>]</h4>
							<h4 type='number' data-type='String'>{{system.price.value}}</h4>
							<div class='item-controls'>
								{{#if system.eqquiped.boolean}}
									<a class='item-control item-toggle-unequip' title='{{localize "ASTRO.actor.itemOption.unequip"}}'>
										<i class='fa-solid fa-toggle-on'></i>
									</a>
								{{else}}
									<a class='item-control item-toggle-equip' title='{{localize "ASTRO.actor.itemOption.equip"}}'>
										<i class='fa-solid fa-toggle-off'></i>
									</a>
								{{/if}}

								<a class='item-control item-display' title='{{localize "ASTRO.actor.itemOption.info"}}'>
									<i class='fa-solid fa-folder'></i>
								</a>
							</div>
						</div>
						<div class='item-info invisible'>
							{{{system.description}}}
						</div>
					</li>

				</ol>
			{{/if}}
		{{/each}}
	</section>
	<section class='hacks-section'>
		{{#each hacks as |item id|}}
			{{#if system.eqquiped.boolean}}
				<div class='flexrow items-header'>
					<h3>{{localize 'ASTRO.actor.hacks.hacks'}}</h3>
					<h3 class='item-name'>{{localize 'ASTRO.actor.hacks.name'}}</h3>
					<h3 class='item-formula'>{{localize 'ASTRO.actor.weapons.damage'}}</h3>
					<h3>{{localize 'ASTRO.hack.cost.name'}}</h3>
					<span></span>
				</div>
				<ol class='items-list'>
					<li class='hack-item item flexcol' data-item-id='{{item._id}}'>
						<div class='flexrow item-row'>
							<img src='{{item.img}}' data-edit='img' title='{{item.name}}' height='30' width='30' />
							<a
								title='{{localize "ASTRO.actor.itemOption.roll"}}'
								class='rollable'
								data-roll-type='hack'
								data-label='{{item.name}}'
								data-img='{{item.img}}'
								data-roll='{{system.damage.roll}}'
								data-bonus='{{system.statusBonus.name}}'
								data-description='{{{system.description}}}'
							>
								<h4 type='text' data-type='String'>{{item.name}}</h4>
							</a>
							{{#if system.causeDamage.boolean}}
								<h4 type='text' data-type='String'>
									{{system.damage.roll}}+[<span style='text-transform: uppercase;'>{{system.statusBonus.name}}</span>]</h4>
							{{else}}
								<span>-</span>
							{{/if}}
							<h4 type='number' data-type='String'>{{system.energyCost.value}}</h4>
							<div class='item-controls'>
								{{#if system.eqquiped.boolean}}
									<a class='item-control item-toggle-unequip' title='{{localize "ASTRO.actor.itemOption.unequip"}}'>
										<i class='fa-solid fa-toggle-on'></i>
									</a>
								{{else}}
									<a class='item-control item-toggle-equip' title='{{localize "ASTRO.actor.itemOption.equip"}}'>
										<i class='fa-solid fa-toggle-off'></i>
									</a>
								{{/if}}

								<a class='item-control item-display' title='{{localize "ASTRO.actor.itemOption.info"}}'>
									<i class='fa-solid fa-folder'></i>
								</a>
							</div>
						</div>
						<div class='item-info invisible'>
							{{{system.description}}}
						</div>
					</li>
				</ol>
			{{/if}}
		{{/each}}
	</section>
</section>